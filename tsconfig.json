{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2022",
    "module": "es2022",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
